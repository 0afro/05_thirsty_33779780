<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <title><%= shopName %> - Survey</title>
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <div class="container">
      <h1><%= shopName %> Customer Survey</h1>

      <form method="POST" action="/survey-result">
        <p>
          <label for="first">First name:</label><br />
          <input type="text" id="first" name="first" required />
        </p>

        <p>
          <label for="last">Surname:</label><br />
          <input type="text" id="last" name="last" required />
        </p>

        <p>
          <label for="email">Email address:</label><br />
          <input type="email" id="email" name="email" required />
        </p>

        <p>
          <label for="age">How old are you?</label><br />
          <input type="text" id="age" name="age" required />
        </p>

        <p>
          <strong>Which of the following drink categories do you consume?</strong><br />
          <% for (let drink of productCategories) { %>
            <input
              type="radio"
              id="<%= drink %>"
              name="category"
              value="<%= drink %>"
              required
            />
            <label for="<%= drink %>"><%= drink %></label><br />
          <% } %>
        </p>

        <p>
          <input type="checkbox" id="student" name="student" value="yes" />
          <label for="student">I am a student</label>
        </p>

        <input type="submit" value="Submit Survey" />
      </form>

      <p><a href="/">Back to Home</a></p>
    </div>
  </body>
</html>
